<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PoolPal" parent="@style/Theme.AppCompat.Light"></style>

    <style name="Theme.PoolPal.Dialog" parent="@android:style/Theme.Light"></style>

    <style name="Theme.PoolPal.HomeAsUp"></style>

    <style name="Theme.PoolPal.Dashboard">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.PoolPal.Transparent" parent="@style/Theme.PoolPal.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowSoftInputMode">stateUnspecified</item>
    </style>

</resources>