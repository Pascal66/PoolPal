<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingBottom="32dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/PoolPal.Widget.Dialog">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:paddingRight="16dp"
            android:paddingLeft="8dp"
            android:background="@drawable/dialog_header">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@drawable/ic_mascot"
                android:contentDescription="@string/description_mascot" />

            <com.devspacenine.poolpal.view.RobotoTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_toRightOf="@id/icon"
                style="@style/PoolPal.Widget.TextView.Title.Tutorial"
                android:gravity="left|center_vertical" />

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_below="@id/header"
            style="@style/PoolPal.Divider.Horizontal.Dialog.Header" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider">

            <LinearLayout
                android:id="@+id/body"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/dialog_body">

                <com.devspacenine.poolpal.view.RobotoTextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="left"
                    style="@style/PoolPal.Widget.TextView.Details.Tutorial" />

            </LinearLayout>

            <View style="@style/PoolPal.Divider.Horizontal.Dialog" />

            <LinearLayout
                android:id="@+id/footer"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <com.devspacenine.poolpal.view.RobotoTextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    style="@style/PoolPal.Widget.Button.Dialog.Left" />

                <View style="@style/PoolPal.Divider.Vertical.Dialog" />

                <com.devspacenine.poolpal.view.RobotoTextView
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    style="@style/PoolPal.Widget.Button.Dialog.Right" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>