<?xml version="1.0" encoding="utf-8"?>
<com.devspacenine.poolpal.view.SliderContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.devspacenine.poolpal"
    android:id="@+id/dateSliderContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.devspacenine.poolpal.view.ScrollLayout
        style="@style/PoolPal.Widget.Scroller"
        app:labelerClass="com.devspacenine.poolpal.widget.labeler.HourLabeler"
        app:labelerFormat="%tk"
        app:childWidth="90dp"/>
    <com.devspacenine.poolpal.view.ScrollLayout
        style="@style/PoolPal.Widget.Scroller"
        app:labelerClass="com.devspacenine.poolpal.widget.labeler.MinuteLabeler"
        app:labelerFormat="%tM"
        app:childWidth="45dp"/>
</com.devspacenine.poolpal.view.SliderContainer>
