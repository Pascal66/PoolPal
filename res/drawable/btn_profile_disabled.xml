<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/divider_white_light" />
            <corners android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:top="1dp"
        android:right="1dp"
        android:left="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_grey_light" />
            <corners android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:top="1dp"
        android:right="1dp"
        android:left="1dp" >
        <shape android:shape="rectangle">
            <gradient
			    android:startColor="@color/bg_highlight_light"
			    android:endColor="@color/bg_highlight_dark"
			    android:angle="270" />
            <corners android:topLeftRadius="5dp"
                android:topRightRadius="5dp" />
        </shape>
    </item>

</layer-list>